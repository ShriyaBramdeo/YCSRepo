@model IEnumerable<YCS.Models.Salary>

@{
    ViewBag.Title = "Index";
}

<h2>Salaries</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
else
{
    
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StaffName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Basic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Overtime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tax)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Toatal)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StaffName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Basic)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Overtime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tax)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Toatal)
        </td>
        <td>
            @if (User.IsInRole("Admin"))
            {
                @Html.ActionLink("Edit", "Edit", new {id = item.Id})
                @Html.ActionLink("Details", "Details", new {id = item.Id}) 
                @Html.ActionLink("Delete", "Delete", new {id = item.Id})
            }
            @if (User.IsInRole("Manager"))
            {

               // @Html.ActionLink("Edit", "Edit", new { id = item.ClientId })
                @Html.ActionLink("Details", "Details", new { id = item.Id})
            }
           
        </td>
    </tr>
}

</table>
